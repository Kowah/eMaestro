<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/fond">


    <ImageButton android:id="@+id/chercher"
    android:layout_width="100dp"
    android:layout_height="40dp"
    android:background="@drawable/chercher"
        android:layout_marginBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



    <ImageButton android:id="@+id/nouveau"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/nouveau"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/telecommande"
        android:layout_centerHorizontal="true" />



    <ImageButton android:id="@+id/telecommande"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/telecommande"
        android:layout_alignParentTop="true"
         />

    <Button
        android:id="@+id/emulateur"
        android:text="Emul"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/chercher"
        />
    <Button
        android:id="@+id/synchro"
        android:text="Synchro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/telecommande"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reconnect"
        android:background="@drawable/reconnexion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/emulateur"
        android:layout_alignParentBottom="true" />


</RelativeLayout>